#!/bin/bash

TYPE=$1
NAME=$2
STATE=$3

case $STATE in
    "MASTER") /etc/keepalived/masterstate.sh
        exit 0
        ;;
    "BACKUP") /etc/keepalived/backupstate.sh
        exit 0
        ;;
    "FAULT")  /etc/keepalived/backupstate.sh
        exit 0
        ;;
    *)        echo "unknown state"
        exit 1
        ;;
esac